<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns       = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"

        id          = "com.adobe.woodward.hungry-hero-slow"
        version     = "1.0.0">
            
    <!-- App Name -->
    <name>Hungry Hero Slow</name>

    <!-- App Description  -->
    <description>
        This cool game uses the FastCanvas plugin for ultra-fast sprite rendering - however this has the plugin disabled for non-fast software rendering only.
    </description>

    <author>
        Too numerous to mention. 
    </author>

    <!-- phonegap version -->
    <preference name="phonegap-version" value="2.3.0" />
            
    <!-- general preferences -->
    <preference name="orientation" value="landscape" />
    <preference name="fullscreen" value="true" />
            
    <!-- iOS specific preferences -->
    <preference name="webviewbounce" value="false" />
    <preference name="detect-data-types" value="false" />
    <preference name="exit-on-suspend" value="true" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="auto-hide-splash-screen" value="true" />
            
    <!-- icon and splash screen -->
    <!-- <icon src="icon.png" /> -->
    <!-- <gap:splash src="splash.png" /> -->

    <!-- Disable all app permissions except the INTERNET permission, which PhoneGap requires. -->
    <preference name="permissions" value="none" />
    
